{
  "compilerOptions": {
    "skipLibCheck": true,
    "jsx": "react",
    "allowJs": true,
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./lib",
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "declarationMap": false,
    "composite": true,
    "tsBuildInfoFile": "./lib/tsconfig.tsbuildinfo",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": ["./src"]
}
